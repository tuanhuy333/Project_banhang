@model IEnumerable <Project_banhang.Models.mModel.Combo>
@{
    ViewBag.Title = "Index";
}
@Html.Partial("_banner")
 <!-- tittle heading -->
<h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
   
    <span>N</span>ew
    <span>C</span>ombo
</h3>
<!-- //tittle heading -->
<div class="row">
    <!-- product left -->
    <div class="agileinfo-ads-display col-lg-12">
        <div class="wrapper">
            <!-- first section -->
            <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                
                <div class="row">
                  
                @foreach (var item in Model)
                {
                    <div class="col-md-4 product-men mt-5">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item text-center">
                                <div class="thumb-image">
                                    <img src="~/Content/images/combo.png" width="250px" height="150px" alt="">
                                </div>
                                <div class="men-cart-pro">
                                    <div class="inner-men-cart-pro">
                                        <a href="/Combo/Detail?idCombo=@item.ID" class="link-product-add-cart">Quick View</a>
                                    </div>
                                </div>
                                <span class="product-new-top">New</span>

                                </div>
                            <div class="item-info-product text-center border-top mt-4">
                                <h4 class="pt-1">
                                    <a href="/Combo/Detail?idCombo=@item.ID">@item.Combo_Name</a>
                                </h4>
                                <div class="info-product-price my-2">
                                    <span class="item_price">@item.totalMoney</span>
                                    <del>@item.discountMoney</del>
                                </div>
                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                    <form action="#" method="post">
                                        <fieldset>
                                            <input type="hidden" name="cmd" value="_cart" />
                                            <input type="hidden" name="add" value="c_@item.ID" />
                                            <input type="hidden" name="business" value=" " />
                                            <input type="hidden" name="item_name" value="@item.Combo_Name" />
                                            <input type="hidden" name="amount" value="@item.totalMoney" />
                                            <input type="hidden" name="discount_amount" value="@item.discountMoney" />
                                            <input type="hidden" name="currency_code" value="VND" />
                                            <input type="hidden" name="return" value=" " />
                                            <input type="hidden" name="cancel_return" value=" " />
                                            <input type="submit" name="submit" value="Add to cart" class="button btn" />
                                        </fieldset>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
            <!-- //first section -->

        </div>
    </div>
    <!-- //product left -->
</div>

